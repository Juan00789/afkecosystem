rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their own avatar.
    // The filename must match their user ID.
    match /avatars/{userId} {
      allow read: if true; // Publicly readable
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow course creators to upload cover images.
    match /course-covers/{fileName} {
      allow read: if true; // Publicly readable for anyone to see course covers
      allow write: if request.auth != null; // Allow any authenticated user to upload
    }
  }
}

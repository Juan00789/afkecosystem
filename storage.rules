rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user avatars
    match /avatars/{userId} {
      // Allow public read access for profile pictures
      allow read: if true;

      // Allow authenticated users to write (create, update, delete) their own avatar.
      // Validate file size and content type.
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                   && request.resource.contentType.matches('image/(jpeg|png)');
    }
    
    // Rules for course cover images
    match /course-covers/{fileName} {
      // Allow public read access for course images
      allow read: if true;
      
      // Allow authenticated users to upload course covers
      allow write: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024 // 5MB limit
                    && request.resource.contentType.matches('image/(jpeg|png)');
    }
  }
}

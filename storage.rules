
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura y escritura a cualquier usuario autenticado.
    // Para mayor seguridad en producción, se podrían restringir las rutas y tamaños de archivo.
    // Ejemplo: match /users/{userId}/{allPaths=**} si los archivos se guardan por usuario.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can update their own profile.
    // Public read for authenticated users is allowed for basic profile info.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Cases can only be read/updated by the client or provider involved.
    match /cases/{caseId} {
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientId;
    }

    // Comments can be created by authenticated users, and only modified/deleted by the author.
    match /cases/{caseId}/comments/{commentId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Services can only be managed by the provider who created them.
    match /services/{serviceId} {
        allow read: if request.auth != null;
        allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.providerId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow authenticated users to read any user's profile (for network functionality)
      allow read: if request.auth != null;
      // Allow users to create their own profile and update it
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /cases/{caseId} {
      // Allow read/write access only to the client or the provider of the case.
      allow read, write: if request.auth != null && (
        (resource.data.clientId == request.auth.uid) || 
        (resource.data.providerId == request.auth.uid)
      );
      
      // Allow a user to create a case only if they are the client.
      allow create: if request.auth != null && request.resource.data.clientId == request.auth.uid;

      match /comments/{commentId} {
        // Only client or provider of the parent case can read/write comments
        allow read, write: if request.auth != null && (
            get(/databases/$(database)/documents/cases/$(caseId)).data.clientId == request.auth.uid || 
            get(/databases/$(database)/documents/cases/$(caseId)).data.providerId == request.auth.uid
        );
      }
    }

     match /services/{serviceId} {
      // Allow any authenticated user to read services
      allow read: if request.auth != null;
      // Allow a user to write (create, update, delete) a service only if they are the provider
      allow write: if request.auth != null && request.resource.data.providerId == request.auth.uid;
    }
  }
}

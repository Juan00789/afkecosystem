rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, update their own profile, but cannot delete it.
    // Any authenticated user can list users to find them by phone number, but not get arbitrary user docs.
    match /users/{userId} {
      allow read, get: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow list: if request.auth != null;
    }

    // A user can manage their own list of providers.
    match /users/{userId}/providers/{providerId} {
        allow read, write, delete: if request.auth.uid == userId;
    }

    // Providers can create and manage their clients. Clients cannot see other clients.
    match /clients/{clientId} {
      allow read, write: if request.auth.uid == request.resource.data.providerId;
      allow create: if request.auth.uid == request.resource.data.providerId;
    }

    // Providers can create and manage their services. Anyone authenticated can see them.
    match /services/{serviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == request.resource.data.userId;
    }

    // Cases can be read by either the client or provider.
    // Cases can only be created by the client.
    // Cases can be updated by either party.
    // Cases can only be deleted by the client.
    match /cases/{caseId} {
      allow read, update: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId;
      allow create: if request.auth.uid == request.resource.data.clientId;
      allow delete: if request.auth.uid == resource.data.clientId;

      // Comments can be created, read, and updated by either the client or provider.
      // No one can delete comments to maintain a record.
      match /comments/{commentId} {
        allow read, create: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId;
      }
    }
    
    // Invoices can be read by either the client or provider.
    // Only the provider can create or update invoices.
    match /invoices/{invoiceId} {
        allow read: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId;
        allow write: if request.auth.uid == request.resource.data.providerId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own profile.
    // Authenticated users can query the collection (to find by phone number) but not list all users.
    // Authenticated users can get public profiles of other users.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Clients can only be managed by their assigned provider.
    match /clients/{clientId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.providerId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.providerId;
    }
    
    // A client can manage their own list of providers.
    match /users/{userId}/providers/{providerId} {
       allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Services can only be created/managed by the provider who owns them.
    // Authenticated users can list/read services.
    match /services/{serviceId} {
        allow read: if request.auth != null;
        allow write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Cases can be read by the client or the provider.
    // Cases can only be created by the client.
    // Cases can be updated by client or provider.
    match /cases/{caseId} {
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.clientId;

      // Comments can be created and read by the client or provider of the case.
      match /comments/{commentId} {
          allow read, create: if request.auth != null && (request.auth.uid == get(/databases/$(database)/documents/cases/$(caseId)).data.clientId || request.auth.uid == get(/databases/$(database)/documents/cases/$(caseId)).data.providerId);
      }
    }
    
    // Invoices can be read by client or provider.
    // Invoices can only be created by the provider.
    match /invoices/{invoiceId} {
        allow read: if request.auth != null && (request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId);
        allow create: if request.auth != null && request.auth.uid == request.resource.data.providerId;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite a los usuarios leer y escribir sus propios datos de perfil
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite a los usuarios autenticados crear, leer, actualizar y borrar
    // sus propios clientes. Nadie m√°s puede ver los clientes de otros.
    match /clients/{clientId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Permite a los usuarios autenticados gestionar sus propios servicios.
    match /services/{serviceId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
  }
}

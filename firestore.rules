rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Public read for profiles, but only owners can write.
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;

      // Subcollection for a client's network of providers.
      // Only the client can manage their own network.
      match /providers/{providerDocId} {
        allow read, create, update, delete: if request.auth.uid == userId;
      }
    }

    // Clients: Can be created by providers. Can be linked by the user themselves upon signup.
    // Can be read/updated/deleted only by the associated provider.
    match /clients/{clientId} {
      allow create: if request.auth.uid == request.resource.data.providerId;
      allow read, update, delete: if resource.data.providerId == request.auth.uid;
      // Allow a new user to link themselves to a pre-registered client entry.
      allow update: if request.auth.uid == request.resource.data.userId;
    }

    // Services: Publicly listable for the landing page.
    // Management (create, update, delete) is restricted to the provider (owner).
    match /services/{serviceId} {
      allow list: if true; // Allows anyone to see the list of services for the landing page.
      allow get: if request.auth != null; // Allows any authenticated user to get a single service.
      allow create, update, delete: if request.auth.uid == request.resource.data.userId;
    }
    
    // Cases: Only the involved client or provider can interact with them.
    match /cases/{caseId} {
      allow read, update, delete: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId;
      allow create: if request.auth.uid == request.resource.data.clientId;
      
      // Comments within a case
      match /comments/{commentId} {
         allow read, create: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId;
      }
    }
    
    // Invoices: Can only be read by the involved client or provider.
    match /invoices/{invoiceId} {
       allow get: if request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.providerId;
       allow list: if request.resource.data.clientId == request.auth.uid || request.resource.data.providerId == request.auth.uid;
       allow create: if request.auth.uid == request.resource.data.providerId;
    }
  }
}
